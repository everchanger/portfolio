---
import Layout from '../layouts/index.astro'
import Contact from '../components/Contact.svelte'
import Skill from '../components/Skill.svelte'

import data from '../data/index.js'

const { skills } = data
---

<Layout title="Joakim Rosenstam" description="Personal site of Joakim Rosenstam, a software developer currently working at Dahl AB as a fullstack developer in Stockholm, Sweden.">
  <div class="flex flex-col items-center border-t border-gray-500">
      <div class="flex flex-col items-center pt-4 mb-2 sm:mt-2 md:p-4 md:mb-6 md:flex-row">
        <a onclick="triggerEgg()" class="relative" href="#">
            <img class="border-4 border-white rounded-full shadow-lg h-40 w-40" src="/assets/joakim.jpg" alt="Joakim Rosenstam" />
            <div id="talk" class="absolute opacity-0 text-lg font-medium rounded-md shadow-lg bg-white px-8 py-2 top-0" style="right: -75px;">
              Hej hej!
            </div>
        </a>
        <div class="text-center mt-4 md:mt-0 md:ml-6 md:text-left">
            <h1 class="text-2xl">Joakim Rosenstam</h1>
            <p>Software Developer</p>
        </div>
        <div class="flex flex-col flex-grow mt-2 pt-2 border-t border-gray-400 md:border-t-0 md:pt-0 md:mt-0 md:flex-row md:justify-start sm:ml-6 lg:ml-16">
            <div class="flex flex-col md:mr-8">
              <Contact class="mb-2" header="Mail" content="joakim.rosenstam@gmail.com" href="mailto:joakim.rosenstam@gmail.com" />
              <Contact class="mb-2" header="Phone" content="+46 (0)73 262 80 70" href="tel:+46732628070" />
            </div>
            <div class="flex flex-col">
              <Contact class="mb-2" header="Discord" content="everchanger#2119" href="https://discordapp.com/" />
              <Contact class="mb-2" header="Skype" content="joakim.rosenstam" href="skype:joakim.rosenstam?chat" />
            </div>
        </div>
      </div>
      <div class="flex flex-col xl:w-1/2">
        <div class="mb-12">
            <h2 class="text-lg mb-6">About me</h2>
            <p class="mb-2">I'm a software developer based in Stockholm, Sweden. My skills are broad and I've worked on pretty much every part of the projects I've been involved in. Everything from the planning/architecture stage to the prototyping and actual production stages to final delivery of the product. I started out as a C++ developer but I would like to think that I'm also fluent in web (HTML/CSS/JS/PHP) by now.</p>
            <p>I'm currently employeed at Dahl AB as a fullstack e-commerce developer.</p>
        </div>
        <div class="work-blurb">
            <h2 class="text-lg mb-6">My skills</h2>
            <div class="flex flex-wrap">
              {skills.map((skill) => (<Skill class="w-1/2 mb-4" header={skill.header} skills={skill.skills} />))}
            </div>
        </div>
      </div>
  </div>
</Layout>